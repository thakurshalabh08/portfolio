# Smartsheet OAuth2 Configuration Template
# Copy this file to .env and fill in your actual values

# Smartsheet OAuth2 Credentials
# Get these from your Smartsheet app registration
SMARTSHEET_CLIENT_ID=your_client_id_here
SMARTSHEET_CLIENT_SECRET=your_client_secret_here

# OAuth2 Redirect URI (must match what's registered in Smartsheet)
SMARTSHEET_REDIRECT_URI=http://localhost:5000/auth/callback

# Flask Configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration (if using persistent storage)
# DATABASE_URL=sqlite:///auth_tokens.db
# REDIS_URL=redis://localhost:6379/0
